generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // we’ll construct this at runtime from Secrets Manager
}

model Embedding {
  id          String   @id
  docId       String?
  chunkIndex  Int
  content     String
  // Postgres float8[] — Prisma supports Postgres scalar lists
  embedding   Float[]  @db.DoublePrecision
  createdAt   DateTime @default(now())

  @@index([docId, chunkIndex], name: "idx_embeddings_doc_chunk")
}