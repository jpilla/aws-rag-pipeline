{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "baseUrl": "."
  },
  "include": ["src/**/*", "../lib/shared-prisma/src/**/*", "../lib/shared-prisma/dist/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
