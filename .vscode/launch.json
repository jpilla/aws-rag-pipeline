{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest (current file)",
      "runtimeExecutable": "/usr/local/bin/node",
      "program": "${workspaceFolder}/services/api/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder}/services/api",
      "runtimeArgs": ["--inspect-brk"],
      "args": ["--runInBand", "--watchAll=false", "${file}"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/services/**",
        "!**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/services/**/dist/**/*.js",
        "${workspaceFolder}/services/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest (single test)",
      "runtimeExecutable": "/usr/local/bin/node",
      "program": "${workspaceFolder}/services/api/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder}/services/api",
      "runtimeArgs": ["--inspect-brk"],
      "args": ["--runInBand", "--watchAll=false", "${file}", "--testNamePattern", "${selectedText}"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/services/**",
        "!**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/services/**/dist/**/*.js",
        "${workspaceFolder}/services/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest (all tests)",
      "runtimeExecutable": "/usr/local/bin/node",
      "program": "${workspaceFolder}/services/api/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder}/services/api",
      "runtimeArgs": ["--inspect-brk"],
      "args": ["--runInBand", "--watchAll=false"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/services/**",
        "!**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/services/**/dist/**/*.js",
        "${workspaceFolder}/services/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to API in Docker",
      "address": "localhost",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}/services/api",
      "remoteRoot": "/app",
      "outFiles": ["${workspaceFolder}/services/api/dist/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/services/api/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Lambda (ingest-queue-reader)",
      "address": "localhost",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "remoteRoot": "/var/task",
      "localRoot": "${workspaceFolder}/lambdas/ingest-queue-reader/dist",
      "outFiles": ["${workspaceFolder}/lambdas/ingest-queue-reader/dist/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}
