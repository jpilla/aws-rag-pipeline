{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to API in Docker",
      "address": "localhost",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}/services/api",
      "remoteRoot": "/app",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Lambda (ingest-queue-reader)",
      "address": "localhost",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "remoteRoot": "/var/task",
      "localRoot": "${workspaceFolder}/lambdas/ingest-queue-reader/dist",
      "outFiles": ["${workspaceFolder}/lambdas/ingest-queue-reader/dist/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}