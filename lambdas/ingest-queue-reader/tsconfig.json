{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "paths": {
      "@shared-prisma/*": [
        "./lib/shared-prisma/src/*",
        "../../lib/shared-prisma/src/*"
      ]
    }
  },
  "include": ["src/**/*", "../../lib/shared-prisma/src/**/*"]
}
