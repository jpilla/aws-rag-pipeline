generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // weâ€™ll construct this at runtime from Secrets Manager
}

model Embedding {
  id          String   @id
  docId       String?
  chunkIndex  Int
  content     String
  // Use vector type from pgvector extension
  embedding   Unsupported("vector")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([docId, chunkIndex], name: "idx_embeddings_doc_chunk")
}
