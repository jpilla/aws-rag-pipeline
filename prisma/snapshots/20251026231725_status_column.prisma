generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // we'll construct this at runtime from Secrets Manager
}

enum ProcessingStatus {
  ENQUEUED
  INGESTED
  FAILED
}

model Embedding {
  id          String           @id
  docId       String?
  chunkIndex  Int
  content     String
  contentHash String
  embedding   Unsupported("vector(1536)")
  status      ProcessingStatus @default(INGESTED)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@unique([contentHash], name: "idx_embeddings_content_hash")
}
