generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // we'll construct this at runtime from Secrets Manager
}

model Embedding {
  id          String   @id
  docId       String?
  chunkIndex  Int
  content     String
  contentHash String   // SHA-256 hash of content for idempotency
  // Use vector type from pgvector extension
  embedding   Unsupported("vector")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([contentHash], name: "idx_embeddings_content_hash")
}
